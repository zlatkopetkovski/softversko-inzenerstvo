@model IEnumerable<PosetiMe.Models.tblVisit>

@{
    ViewBag.Title = "Index";
}

<h2>Внесување на нова посета</h2>

<p>
    @Html.ActionLink("Внеси нова посета", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Дата
        </th>
        <th>
            Локал
        </th>
        <th></th>
    </tr>
 
@foreach (var item in Model)
{
    if (item.ID_User == ViewBag.user) // проверва дали посетата на локалот е од најавениот корисник
    {
    <tr>
        <td>
            @Html.DisplayFor(Model => item.Date)
        </td>
        <td>
            @Html.DisplayFor(Model => item.tblLocal.Name)
        </td>
        <td>
            @Html.ActionLink("Детали", "Details", new { id = item.ID }) 
        </td>
    </tr>}
}

</table>
