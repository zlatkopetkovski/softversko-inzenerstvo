@model PosetiMe.Models.tblLocal 

@{
    ViewBag.Title = "Details";
}

<h2>Детали</h2>

<div>
    <h4>за локалот</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Име
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Град
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblCity.Name)
        </dd>

        <dt>
            Адреса
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Location)
        </dd>

        <dt>
            Телефон
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt>
            Телефон 2
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone2)
        </dd>

        @*<dt>
            @Html.DisplayNameFor(model => model.Imege)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Imege)
        </dd>*@

        

        <dt>
            Рејтинг
        </dt>

        <dd>
            @if (Model != null)
            {
                @TempData["rateing"]
            }
        </dd>

    </dl>
</div>

<p>
    @Html.ActionLink("Назад кон сите локали", "Index")
</p>

<table class="table">
    <tr>
        <th>
            Дата
        </th>
        <th>
            Коментар
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in ViewBag.comments)
    {
        <tr>
            <td>
                @item.Date
            </td>
            <td>
                @item.Comment
            </td>
        </tr>
    }

</table>

